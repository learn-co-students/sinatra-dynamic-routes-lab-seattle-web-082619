<%op_string = params[:operation]%>
<%num1 = params[:number1].to_i%>
<%num2 = params[:number2].to_i%>

<%if op_string == "add"%>
  <%answer = num1 + num2%>
<%elsif op_string == "subtract"%>
  <%answer = num1 - num2%>
<%elsif op_string == "divide"%>
  <%answer = num1 / num2%>
<%else%>
  <%answer = num1 * num2%>
<%end%>
<%=answer%>
